<div class="row">
  <div class="col-xs-12 col-lg-6 col-lg-offset-3">
    <div class="games card card-inverse" style="background-color: #333; border-color: #xxx;">

      <div class="card-block">
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Games</h4>
          </div>
          <div class="col-md-6">
            <%= link_to 'New Game', new_game_path, class: 'pull-xs-right' %>
          </div>
        </div>
      </div>

      <div class="card-block">
        <table class='table table-hover'>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Field</th>
          </tr>
          <% @games.each do |game| %>
            <tr>
              <td><%= game.date %></td>
              <td><%= game.time.strftime("%I:%M%p") %></td>
              <td><%= game.field %></td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
  </div>
</div>

