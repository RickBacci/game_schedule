<div class="row">
  <div class="col-xs-12 col-lg-6 col-lg-offset-3">
    <div class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">New Team</h4>
          </div>
          <div class="col-md-6">
            <%= link_to 'back', teams_path, class: 'pull-xs-right' %>
          </div>

        </div>
      </div>

      <div class="card-block">
        <%= form_for @team do |f| %>
          <div class='form-group'>
            <%= f.label :name, class: 'text-center' %>
            <%= f.text_field :name, class: 'form-control' %>
            <br>
            <%= f.submit 'Create Team', class: "form-control btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <% if @team.errors.any? %>
        <%= render partial: 'shared/validation_errors', locals: { model: @team} %>
      <% end %>

    </div>
  </div>
</div>

